@model List<Order>

@{
    ViewData["Title"] = "Заказы";
}

<style>
    td a {
        padding: .5rem;
        display: block;
        width: 100%;
        color: black;
        text-decoration: none;
    }

    td a:hover {
        color: black;
        text-decoration: none;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Список заказов</h1>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>№</th>
            <th>Город отправителя</th>
            <th>Адрес отправителя</th>
            <th>Город получателя</th>
            <th>Адрес получателя</th>
            <th>Вес груза, г</th>
            <th>Дата забора груза</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.Id</a></td>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.SenderCity</a></td>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.SenderAdress</a></td>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.RecieverCity</a></td>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.RecieverAdress</a></td>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.WeightInGrams</a></td>
                <td style="padding: 0;"><a draggable="false" href="/Home/OrderInfo/@order.Id">@order.PickUpDate.ToShortDateString()</a></td>
            </tr>
        }
    </tbody>
</table>
</div>
