@model List<OrderViewModel>

@{
    ViewData["Title"] = "Заказы";
}

<div class="text-center">
    <h1 class="display-4">Список заказов</h1>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>№</th>
            <th>Город отправителя</th>
            <th>Адрес отправителя</th>
            <th>Город получателя</th>
            <th>Адрес получателя</th>
            <th>Вес груза, г</th>
            <th>Дата забора груза</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr><td>Заказы не найдены</td></tr>
        }
        else
        {
            @foreach (var order in Model)
            {
                <tr onclick="toOrderPage(@order.Id)">
                    <td>@order.Number</td>
                    <td>@order.SenderAdress</td>
                    <td>@order.SenderCity</td>
                    <td>@order.RecieverCity</td>
                    <td>@order.RecieverAdress</td>
                    <td>@order.WeightInGrams</td>
                    <td>@order.PickUpDate.ToShortDateString()</td>
                </tr>
            }
        }
    </tbody>
</table>
</div>

<script>
    function toOrderPage(id)
    {
        window.location.href = `/Home/OrderInfo/${id}`;
    }
</script>
