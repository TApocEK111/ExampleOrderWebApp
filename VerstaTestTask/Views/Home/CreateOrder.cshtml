@model Order

@{
    ViewData["Title"] = "Создать заказ";
}
<div class="container mt-4">
    <div class="row">
        <div class="card">
            <div class="card-header">Создать заказ</div>
            <div class="card-body">
                <form asp-action="CreateOrder" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="SenderCity" class="form-label">Город отправителя</label>
                        <input asp-for="SenderCity" class="form-control" placeholder="Введите город отправителя" required>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SenderAdress" class="form-label">Адрес отправителя</label>
                        <input asp-for="SenderAdress" class="form-control" placeholder="Введите адрес отправителя" required>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RecieverCity" class="form-label">Город получателя</label>
                        <input asp-for="RecieverCity" class="form-control" placeholder="Введите город получателя" required>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RecieverAdress" class="form-label">Адрес получателя</label>
                        <input asp-for="RecieverAdress" class="form-control" placeholder="Введите адрес получателя" required>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="WeightInGrams" class="form-label">Вес в граммах</label>
                        <input asp-for="WeightInGrams" type="number" step="0.1" class="form-control" placeholder="0,0" required>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PickUpDate" class="form-label">Дата забора груза</label>
                        <input asp-for="PickUpDate" class="form-control" placeholder="Введите дату забора груза" type="date" required>
                    </div>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Создать</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
